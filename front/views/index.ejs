<!-- views/board.ejs -->

<!DOCTYPE html>
<html>

<head>

</head>

<body>
  <div class="" style="margin: auto">
    <form action="/add" method="POST">
      <table>
        <tr>
          <textarea name="title" id="title" ></textarea>
        </tr>
        <tr>
          <textarea name="content" id="content" ></textarea>
        </tr>
        <tr>
          <input type="submit">
        </tr>
      </table>
    </form>
    <table border="1">
      <th>이름</th>
      <th>이메일</th>
      <th>날짜</th>
      <% for (var i=0; i<board.length; i++) { %>
      <tr>
        <td><%= board[i].title %></td>
        <td><%= board[i].content %></td>
        <td><%= board[i].date %></td>
      </tr>
      <% } %>
    </table>
  </div>
</body>

</html>